            if !user  
              li(class=(title == 'Register' ? 'active' : ''))
                a(href='/users/register') Register
              li(class=(title == 'Login' ? 'active' : ''))
                a(href='/users/login') Login
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/logout') Logout 
